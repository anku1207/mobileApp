<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/my_awesome_toolbar"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/rof_backbutton"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/back_activity_button"
            />

        <LinearLayout
            android:id="@+id/saveshipmenticonintop"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:layout_gravity="end"
            android:layout_marginRight="10dp">



            <ImageView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:src="@drawable/save"
                android:layout_marginTop="15dp"
                android:tint="@color/white"
                android:paddingBottom="0dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:textSize="10dp"
                android:background="@null"
                android:text="Save"
                android:textStyle="bold"
                android:textColor="@color/white"
                />

        </LinearLayout>
         <TextView
            android:layout_centerInParent="true"
            android:layout_height="match_parent"
            android:layout_width="fill_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="ROF"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/title"
            android:textColor="@color/white"

            />

    </android.support.v7.widget.Toolbar>



    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
         android:layout_width="match_parent"
         android:layout_height="match_parent"

        >









    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.Booking"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        >
     <LinearLayout
            style="@style/inputRow">

            <ImageView
                android:src="@drawable/rof_bookingdate"
                style="@style/inputIcons"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="Booking Date"
                    android:textSize="15dp"
                    android:tint="#afd3d3d3" />

                <EditText
                    android:id="@+id/bookingdate"
                    android:editable="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/edittext_bottom_line"
                    android:paddingBottom="10dp"
                    android:paddingTop="5dp"
                    />
            </LinearLayout>


        </LinearLayout>

































        <LinearLayout
            style="@style/inputRow">

            <ImageView
                android:src="@drawable/rof_customer_form_icon"
                style="@style/inputIcons"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="Customer"
                    android:textSize="15dp"
                    android:tint="#afd3d3d3" />

                <EditText
                    android:id="@+id/customername"
                    android:editable="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/edittext_bottom_line"
                    android:paddingBottom="10dp"
                    android:paddingTop="5dp"

                    />

                <EditText
                    android:id="@+id/customerid"

                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="20dp"
                    android:visibility="gone"

                    />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            style="@style/inputRow"
            >


            <ImageView
                style="@style/inputIcons"
                android:src="@drawable/rof_book_from_icon"



                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="Awb N0."
                    android:textSize="15dp"
                    android:tint="#afd3d3d3" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:background="@drawable/edittext_bottom_line">

                    <EditText
                        android:id="@+id/bookingawbno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="30dp"
                        android:background="@null"
                        android:imeOptions="actionSearch"
                        android:inputType="text" />

                    <ImageButton
                        android:id="@+id/cameraofawbno"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right"
                        android:background="?android:attr/selectableItemBackground"
                        android:src="@drawable/rof_camera_btn_icon" />
                </FrameLayout>


            </LinearLayout>


        </LinearLayout>




        <LinearLayout
            style="@style/inputRow"
            >


            <ImageView

                android:src="@drawable/rof_address_from_icon"
                style="@style/inputIcons"


                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="Address"
                    android:textSize="15dp"
                    android:tint="#afd3d3d3" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:background="@drawable/edittext_bottom_line">

                    <!-- <EditText
                    android:id="@+id/address"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/rof_camera_btn_icon"
                    android:background="@drawable/edittext_bottom_line"
                    android:layout_marginLeft="20dp"
                    android:paddingBottom="10dp"
                    />-->

                    <ImageView
                        android:id="@+id/addressimage"
                        android:layout_width="50dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="100dp"
                        android:scaleType="fitXY"
                        android:background="@drawable/edittext_bottom_line"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:paddingBottom="10dp"
                        android:visibility="gone" />


                    <ImageButton

                        android:id="@+id/cameraofaddress"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        android:background="?android:attr/selectableItemBackground"


                        android:src="@drawable/rof_camera_btn_icon" />


                </FrameLayout>


            </LinearLayout>


        </LinearLayout>





        <LinearLayout
            style="@style/inputRow"
            >

            <ImageView
                style="@style/inputIcons"
                android:src="@drawable/rof_pincode_from_icon"


                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="Pincode"
                    android:textSize="15dp"
                    android:tint="#afd3d3d3" />

                <EditText
                    android:id="@+id/pincode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/edittext_bottom_line"
                    android:inputType="number"
                    android:maxLength="6"
                    android:paddingBottom="10dp"

                    android:paddingTop="5dp" />


            </LinearLayout>


        </LinearLayout>


        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorPrimary"
            android:visibility="gone"

            />


        <LinearLayout
            style="@style/inputRow"
            >

            <ImageView

                android:src="@drawable/rof_city_from_icon"
                style="@style/inputIcons"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="City"
                    android:textSize="15dp"
                    android:tint="#afd3d3d3" />

                <EditText
                    android:id="@+id/cityname"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/edittext_bottom_line"
                    android:inputType="number"
                    android:paddingBottom="10dp"
                    android:paddingTop="5dp" />

                <EditText
                    android:id="@+id/cityid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/edittext_bottom_line"
                    android:inputType="number"
                    android:paddingBottom="10dp"
                    android:paddingTop="5dp"

                    android:visibility="gone" />


            </LinearLayout>


        </LinearLayout>









        <LinearLayout
            style="@style/inputRow"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >


                <ImageView

                    android:src="@drawable/rof_weight"
                    style="@style/inputIcons"


                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginLeft="20dp"
                            android:text="Weight"
                            android:textSize="15dp"
                            android:tint="#afd3d3d3" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:background="@drawable/edittext_bottom_line">

                        <EditText
                            android:id="@+id/weight"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            android:background="@null"
                            android:inputType="numberDecimal|numberSigned"
                            android:text=".100"

                            />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <ImageView

                    android:src="@drawable/rof_pes"
                    style="@style/inputIcons"
                    android:layout_marginLeft="10dp"


                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginLeft="20dp"
                            android:text="Pcs"
                            android:textSize="15dp"
                            android:tint="#afd3d3d3" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:background="@drawable/edittext_bottom_line">

                        <EditText
                            android:id="@+id/pcs"
                            android:inputType="number"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            android:background="@null"
                            android:text="1"

                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            style="@style/inputRow"
            >
            <ImageView

                android:src="@drawable/rof_forwarder_from_icon"
                style="@style/inputIcons"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="Forwarder"
                    android:textSize="15dp"
                    android:tint="#afd3d3d3" />


                <EditText
                    android:id="@+id/forwardername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/edittext_bottom_line"
                    android:inputType="number"
                    android:paddingBottom="10dp"
                    android:paddingTop="5dp" />

                <EditText
                    android:id="@+id/forwarderid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/edittext_bottom_line"
                    android:inputType="number"
                    android:paddingBottom="10dp"
                    android:paddingTop="5dp"

                    android:visibility="gone" />


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            style="@style/inputRow"
            >

            <ImageView

                android:src="@drawable/rof_servicetype"
                style="@style/inputIcons"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="Service Type"
                    android:textSize="15dp"
                    android:tint="#afd3d3d3" />


                <EditText
                    android:id="@+id/servicename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/edittext_bottom_line"
                    android:inputType="number"
                    android:paddingBottom="10dp"
                    android:paddingTop="5dp" />

                <EditText
                    android:id="@+id/serviceid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/edittext_bottom_line"
                    android:inputType="number"
                    android:paddingBottom="10dp"
                    android:paddingTop="5dp"

                    android:visibility="gone" />


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            style="@style/inputRow"
            >

            <ImageView

                android:src="@drawable/rof_shipmenttype"
                style="@style/inputIcons"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="Shipment Type"
                    android:textSize="15dp"
                    android:tint="#afd3d3d3" />


                <EditText
                    android:id="@+id/shipmenttype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/edittext_bottom_line"
                    android:inputType="number"
                    android:paddingBottom="10dp"
                    android:paddingTop="5dp" />

                <EditText
                    android:id="@+id/shipmenttypeid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/edittext_bottom_line"
                    android:inputType="number"
                    android:paddingBottom="10dp"
                    android:paddingTop="5dp"

                    android:visibility="gone" />


            </LinearLayout>


        </LinearLayout>



        <LinearLayout
            style="@style/inputRow"
            >

            <ImageView

                android:src="@drawable/rof_paymenttype"
                style="@style/inputIcons"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="Payment Type"
                    android:textSize="15dp"
                    android:tint="#afd3d3d3" />


                <EditText
                    android:id="@+id/paymentname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/edittext_bottom_line"
                    android:inputType="number"
                    android:paddingBottom="10dp"
                    android:paddingTop="5dp" />

                <EditText
                    android:id="@+id/paymenttypeid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/edittext_bottom_line"
                    android:inputType="number"
                    android:paddingBottom="10dp"
                    android:paddingTop="5dp"

                    android:visibility="gone" />


            </LinearLayout>


        </LinearLayout>





        <LinearLayout
            style="@style/inputRow"
            android:visibility="gone"
            android:id="@+id/invoicelayout">

            <ImageView

                android:src="@drawable/rof_invoicno"
                style="@style/inputIcons"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="Invoice"
                    android:textSize="15dp"
                    android:tint="#afd3d3d3" />


                <EditText
                    android:id="@+id/invoice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/edittext_bottom_line"
                    android:inputType="text"
                    android:paddingBottom="10dp"
                    android:paddingTop="5dp" />

            </LinearLayout>


        </LinearLayout>




        <LinearLayout

            style="@style/inputRow"
            android:visibility="gone"
            android:id="@+id/declaredlayout">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >


                <ImageView
                    android:src="@drawable/rof_declaredvalue"
                    style="@style/inputIcons"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginLeft="20dp"
                            android:text="Declared Value"
                            android:textSize="15dp"
                            android:tint="#afd3d3d3" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:background="@drawable/edittext_bottom_line">

                        <EditText
                            android:id="@+id/declaredvalue"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            android:background="@null"
                            android:inputType="number"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <ImageView
                    android:src="@drawable/rof_cnee"
                    style="@style/inputIcons"
                    android:layout_marginLeft="10dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginLeft="20dp"
                            android:text="C/nee"
                            android:textSize="15dp"
                            android:tint="#afd3d3d3" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:background="@drawable/edittext_bottom_line">

                        <EditText
                            android:id="@+id/cnee"
                            android:inputType="text"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            android:background="@null"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



        <Button
            android:layout_width="match_parent"

            android:layout_marginBottom="10dp"

            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:id="@+id/saveshipment"
            android:background="@color/colorPrimary"
            android:text="Save"
            android:textColor="@color/white"

            />


    </LinearLayout>
 </ScrollView>
</LinearLayout>








