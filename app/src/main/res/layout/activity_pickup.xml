<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/my_awesome_toolbar"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/rof_backbutton"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/back_activity_button"
            />


            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"

                android:layout_marginTop="15dp"
                android:tint="@color/white"
                android:layout_gravity="end"
           />

        <TextView
            android:layout_centerInParent="true"
            android:layout_height="match_parent"
            android:layout_width="fill_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="ROF"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/title"
            android:textColor="@color/white"

            />

    </android.support.v7.widget.Toolbar>



    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >









        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".activity.Booking"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            >

            <LinearLayout
                style="@style/inputRow">

                <ImageView
                    android:src="@drawable/rof_customer_form_icon"
                    style="@style/inputIcons"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginLeft="20dp"
                        android:text="Customer"
                        android:textSize="15dp"
                        android:tint="#afd3d3d3" />

                    <EditText
                        android:id="@+id/customername"
                        android:editable="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/edittext_bottom_line"
                        android:paddingBottom="10dp"
                        android:paddingTop="5dp"

                        />

                    <EditText
                        android:id="@+id/customerid"

                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginLeft="20dp"
                        android:visibility="gone"

                        />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                style="@style/inputRow"
                >


                <ImageView
                    style="@style/inputIcons"
                    android:src="@drawable/rof_book_from_icon"



                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginLeft="20dp"
                        android:text="Awb N0."
                        android:textSize="15dp"
                        android:tint="#afd3d3d3" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:background="@drawable/edittext_bottom_line">

                        <EditText
                            android:id="@+id/bookingawbno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="30dp"
                            android:background="@null"
                            android:imeOptions="actionSearch"
                            android:inputType="text" />

                        <ImageButton
                            android:id="@+id/cameraofawbno"
                            android:layout_width="35dp"
                            android:layout_height="30dp"
                            android:layout_gravity="right"
                            android:background="?android:attr/selectableItemBackground"
                            android:src="@drawable/rof_camera_btn_icon" />
                    </FrameLayout>


                </LinearLayout>


            </LinearLayout>




            <LinearLayout
                style="@style/inputRow"
                >


                <ImageView

                    android:src="@drawable/rof_address_from_icon"
                    style="@style/inputIcons"


                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginLeft="20dp"
                        android:text="Address"
                        android:textSize="15dp"
                        android:tint="#afd3d3d3" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:background="@drawable/edittext_bottom_line">



                        <ImageView
                            android:id="@+id/addressimage"
                            android:layout_width="50dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="100dp"
                            android:scaleType="fitXY"
                            android:background="@drawable/edittext_bottom_line"
                            android:imeOptions="actionSearch"
                            android:inputType="text"
                            android:paddingBottom="10dp"
                            android:visibility="gone" />


                        <ImageButton

                            android:id="@+id/cameraofaddress"
                            android:layout_width="35dp"
                            android:layout_height="30dp"
                            android:layout_gravity="right"
                            android:layout_marginTop="10dp"
                            android:background="?android:attr/selectableItemBackground"


                            android:src="@drawable/rof_camera_btn_icon" />


                    </FrameLayout>


                </LinearLayout>


            </LinearLayout>





            <LinearLayout
                style="@style/inputRow"
                >

                <ImageView
                    style="@style/inputIcons"
                    android:src="@drawable/rof_pincode_from_icon"


                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginLeft="20dp"
                        android:text="Pincode"
                        android:textSize="15dp"
                        android:tint="#afd3d3d3" />

                    <EditText
                        android:id="@+id/pincode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/edittext_bottom_line"
                        android:inputType="number"
                        android:maxLength="6"
                        android:paddingBottom="10dp"

                        android:paddingTop="5dp" />


                </LinearLayout>


            </LinearLayout>


            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:indeterminate="true"
                android:indeterminateTint="@color/colorPrimary"
                android:visibility="gone"

                />


            <LinearLayout
                style="@style/inputRow"
                >

                <ImageView

                    android:src="@drawable/rof_city_from_icon"
                    style="@style/inputIcons"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginLeft="20dp"
                        android:text="City"
                        android:textSize="15dp"
                        android:tint="#afd3d3d3" />

                    <EditText
                        android:id="@+id/cityname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/edittext_bottom_line"
                        android:inputType="number"
                        android:paddingBottom="10dp"
                        android:paddingTop="5dp"
                        android:editable="false"/>

                    <EditText
                        android:id="@+id/cityid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/edittext_bottom_line"
                        android:inputType="number"
                        android:paddingBottom="10dp"
                        android:paddingTop="5dp"
                        android:visibility="gone" />


                </LinearLayout>


            </LinearLayout>







            <Button
                android:layout_width="match_parent"

                android:layout_marginBottom="10dp"

                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:id="@+id/saveshipment"
                android:background="@color/colorPrimary"
                android:text="Save"
                android:textColor="@color/white"

                />


        </LinearLayout>
    </ScrollView>
</LinearLayout>








